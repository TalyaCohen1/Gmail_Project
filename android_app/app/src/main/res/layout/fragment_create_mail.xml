<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/background"
    android:padding="0dp">

    <!-- Top bar with close button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/loginFieldsAttr"
        android:elevation="4dp"
        android:paddingEnd="8dp">

        <ImageButton
            android:id="@+id/buttonClose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="@string/back"
            android:tint="?attr/colorButtonText" />
    </RelativeLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- To -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="?attr/loginFieldsAttr"
                app:boxStrokeColor="@color/buttons"
                app:hintTextColor="@color/buttons"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                android:hint="To"
                app:expandedHintEnabled="true">


            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextTo"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="64dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColor"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Subject -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="?attr/loginFieldsAttr"
                app:boxStrokeColor="@color/buttons"
                app:hintTextColor="@color/buttons"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                android:hint="Subject"
                app:expandedHintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="64dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColor"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Body -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="?attr/loginFieldsAttr"
                app:boxStrokeColor="@color/buttons"
                app:hintTextColor="@color/buttons"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                android:hint="Message body"
                app:expandedHintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextBody"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:minHeight="64dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColor"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Error -->
            <TextView
                android:id="@+id/textError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:visibility="gone"
                android:paddingTop="8dp"/>

            <!-- Send Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="ðŸ“¤ Send"
                android:textAllCaps="false"
                android:textColor="?attr/colorButtonText"
                android:backgroundTint="@color/regular_buttons"
                app:cornerRadius="32dp"
                android:elevation="6dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
