<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/label_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/labels"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Label Icon" />

    <TextView
        android:id="@+id/label_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Custom Label Name"
        android:textColor="?android:attr/textColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mail_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(5)"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:layout_marginEnd="8dp"
        android:visibility="gone" /> <!-- Initially hidden until count is available -->

    <ImageView
        android:id="@+id/label_actions_button"
        style="@style/ThreeDotsButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/__dots"
        android:contentDescription="Label Options" />

</LinearLayout>
