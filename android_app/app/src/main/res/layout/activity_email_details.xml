<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emailDetailsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.EmailDetailsActivity">

    <!-- TextView להצגת השולח -->
    <!-- שימי לב שה-id תואם למה שחיפשנו בקוד ה-Java -->
    <TextView
        android:id="@+id/emailSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="From: shani.levi@example.com" />

    <!-- TextView להצגת הנושא -->
    <TextView
        android:id="@+id/emailSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        tools:text="Important Project Update" />

    <!-- קו מפריד ויזואלי -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray" />

    <!-- TextView להצגת גוף המייל -->
    <TextView
        android:id="@+id/emailBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        tools:text="Hi team,\n\nThis is the full body of the email. We need to make sure that it wraps correctly and displays multiple lines if needed.\n\nThanks,\nShani" />

    <!-- כפתורים למייל רגיל -->
    <LinearLayout
        android:id="@+id/sentButtonsGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="24dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnReply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFD54F"
            android:text="↩️ Reply" />

        <Button
            android:id="@+id/btnForward"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFD54F"
            android:text="↪️ Forward"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- כפתור לעריכת טיוטה -->
    <LinearLayout
        android:id="@+id/draftButtonsGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnEditDraft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✏️ Edit Draft"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFD54F" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="16dp"/>
</LinearLayout>

